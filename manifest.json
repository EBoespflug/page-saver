{
  "manifest_version": 2,
  "name": "page-saver",
  "version": "0",

  "description": "Adds a solid red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["page-saver.js"]
    }
  ]

}
